

<h3>Point Leaders</h3>
<% if all_scores[0] !=nil%>
<section id="points_leaders">
<div class="row">
  <div class="col-xs-1 col-xs-1">
  </div>

  <div class="col-xs-1 col-xs-1">
    <div class="thumbnail">
      <img src=<%=all_scores[0]["image_url"]%>>
      <div class="caption">
        <h4>Overall</h4>
        <p><%=all_scores[0]["username"]%></p>
      </div>
    </div>
  </div>

  <div class="col-xs-1 col-xs-1">
    <div class="thumbnail">
      <img src=<%=beverage_score[0]["image_url"]%>>
      <div class="caption">
        <h4>Beverages</h4>
        <p><%=beverage_score[0]["username"]%></p>
      </div>
    </div>
  </div>

  <div class="col-xs-1 col-xs-1">
    <div class="thumbnail">
      <img src=<%=pong_score[0]["image_url"]%>>
      <div class="caption">
        <h4>Ping Pong</h4>
        <p><%=pong_score[0]["username"]%></p>
      </div>
    </div>
  </div>
  <div class="col-xs-1 col-xs-1">
    <div class="thumbnail">
      <img src=<%=network_score[0]["image_url"]%>>
      <div class="caption">
        <h4>Networking</h4>
        <p><%=network_score[0]["username"]%></p>
      </div>
    </div>
  </div>

  <div class="col-xs-1 col-xs-1">
    <div class="thumbnail">
      <img src=<%=learning_score[0]["image_url"]%>>
      <div class="caption">
        <h4>Learning</h4>
        <p><%=learning_score[0]["username"]%></p>
      </div>
    </div>
  </div>

  <div class="col-xs-1 col-xs-1">
    <div class="thumbnail">
      <img src=<%=badass_code_score[0]["image_url"]%>>
      <div class="caption">
        <h4>Code</h4>
        <p><%=badass_code_score[0]["username"]%></p>
      </div>
    </div>
  </div>
</div>


</section>
<%end%>


<div id="leaderboard">
<hr />
<h3>Leaderboard</h3>

  <div class="row">
    <div class="col-xs-1 col-xs-1">
      Name
    </div>
    <div class="col-xs-1 col-xs-1">
      Overall
    </div>
    <div class="col-xs-1 col-xs-1">
      Beverages
    </div>
    <div class="col-xs-1 col-xs-1">
      Ping Pong
    </div>
    <div class="col-xs-1 col-xs-1">
      Networking
    </div>
    <div class="col-xs-1 col-xs-1">
      Learning
    </div>
    <div class="col-xs-1 col-xs-1">
      Code
    </div>
</div>


  <%all_scores.each do |person|%>
   <div class="row">
      <div class="col-xs-1 col-xs-1"><%=person["username"]%></div>
      <div class="col-xs-1 col-xs-1" id ="total_score"><%=person["total_score"]%></div>
      <div class="col-xs-1 col-xs-1" id="beer"><%=person["beer"]%></div>
      <div class="col-xs-1 col-xs-1" id="pong"><%=person["pong"]%></div>
      <div class="col-xs-1 col-xs-1" id="network"><%=person["network"]%></div>
      <div class="col-xs-1 col-xs-1" id="learning"><%=person["learning"]%></div>
      <div class="col-xs-1 col-xs-1" id="badass_code"><%=person["code"]%></div>
   </div>
  <%end%>

</div>